{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
<div = "container mt-4">
    <h1>Entraineur index</h1>
    <div class="row flex justify-content-center flex-wrap">

            {% for joueur in joueurs %}
        <div class="card-deck col-md-4">
            <div class="card mb-4">
                <div class="card-body" style="text-align:center">
                <h5 class="card-title"> {{ joueur.nom }} {{ joueur.prenom }}</h5>
                <p class="card-text"><small class="text-muted">{{ joueur.age}}</small></p>
                <a href="{{ path('app_joueur_show', {'id': joueur.id}) }}" class="btn btn-primary">Voir Profil</a>
                <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}" class="btn btn-secondary">Modifier</a>
                </div>
            </div>
        </div>

        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
    </div>

    <a href="{{ path('app_joueur_new') }}">Create new</a>
</div>   
{% endblock %}
